<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/volume_style_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:text="@string/section_title_custom_magisk_module"
        android:textColor="?attr/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_material"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/volume_style_title"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="@string/volume_style"
                android:textColor="@color/text_color_primary" />

            <ImageView
                android:id="@+id/volume_style_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="start|center"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_info"
                app:tint="?attr/colorError" />

        </LinearLayout>

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume_module_desc"
            android:textColor="@color/text_color_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/volume_style1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <RadioButton
                    android:id="@+id/gradient_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_gradient"
                    android:textAlignment="viewStart" />

                <RadioButton
                    android:id="@+id/doublelayer_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_doublelayer"
                    android:textAlignment="viewStart" />

                <RadioButton
                    android:id="@+id/shadedlayer_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_shadedlayer"
                    android:textAlignment="viewStart" />

            </RadioGroup>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <RadioGroup
                android:id="@+id/volume_style2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <RadioButton
                    android:id="@+id/neumorph_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_neumorph"
                    android:textAlignment="viewStart" />

                <RadioButton
                    android:id="@+id/outline_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_outline"
                    android:textAlignment="viewStart" />

                <RadioButton
                    android:id="@+id/neumorphoutline_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/volume_style_neumorphoutline"
                    android:textAlignment="viewStart" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_material"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/volume_style_create_module"
            style="@style/Widget.MaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_create_module" />

    </LinearLayout>
</LinearLayout>