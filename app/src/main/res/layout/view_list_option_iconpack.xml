<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/icon_pack_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/container_margin"
    android:background="@drawable/container"
    android:orientation="vertical"
    android:paddingStart="@dimen/container_paddingSide"
    android:paddingTop="@dimen/container_padding"
    android:paddingEnd="@dimen/container_paddingSide"
    android:paddingBottom="@dimen/container_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginEnd="@dimen/container_padding"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iconpack_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iconpack_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/cont_desc_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconpack_preview1"
                    android:layout_width="@dimen/preview_icon_size"
                    android:layout_height="@dimen/preview_icon_size"
                    android:layout_margin="@dimen/preview_margin"
                    android:contentDescription="@string/icon"
                    app:tint="@color/colorAccent" />

                <ImageView
                    android:id="@+id/iconpack_preview2"
                    android:layout_width="@dimen/preview_icon_size"
                    android:layout_height="@dimen/preview_icon_size"
                    android:layout_margin="@dimen/preview_margin"
                    android:contentDescription="@string/icon"
                    app:tint="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconpack_preview3"
                    android:layout_width="@dimen/preview_icon_size"
                    android:layout_height="@dimen/preview_icon_size"
                    android:layout_margin="@dimen/preview_margin"
                    android:contentDescription="@string/icon"
                    app:tint="@color/colorAccent" />

                <ImageView
                    android:id="@+id/iconpack_preview4"
                    android:layout_width="@dimen/preview_icon_size"
                    android:layout_height="@dimen/preview_icon_size"
                    android:layout_margin="@dimen/preview_margin"
                    android:contentDescription="@string/icon"
                    app:tint="@color/colorAccent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/enable_iconpack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_padding"
        android:background="@drawable/button"
        android:fontFamily="@font/semibold"
        android:letterSpacing="0.2"
        android:stateListAnimator="@null"
        android:text="@string/btn_enable"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/cont_title_size"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/disable_iconpack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_padding"
        android:background="@drawable/button_red"
        android:fontFamily="@font/semibold"
        android:letterSpacing="0.2"
        android:stateListAnimator="@null"
        android:text="@string/btn_disable"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/cont_title_size"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@null" />

</LinearLayout>