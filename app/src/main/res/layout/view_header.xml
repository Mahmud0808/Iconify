<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:background="@color/transparent"
    android:clipChildren="false"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@color/colorBackground"
        app:collapsedTitleTextAppearance="@style/Toolbar.TitleText.Collapsed"
        app:collapsedTitleTextColor="@color/textColorPrimary"
        app:contentScrim="@color/transparent"
        app:expandedTitleMarginEnd="@dimen/_28sdp"
        app:expandedTitleMarginStart="@dimen/_28sdp"
        app:expandedTitleTextAppearance="@style/Toolbar.TitleText.Expanded"
        app:expandedTitleTextColor="@color/textColorPrimary"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:maxLines="1"
        app:title="@string/app_name"
        app:titleTextEllipsize="end">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="@dimen/_16sdp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:maxLines="1"
            app:popupTheme="@style/Theme.Iconify"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextEllipsize="end" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>