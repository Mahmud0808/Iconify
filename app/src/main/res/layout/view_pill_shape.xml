<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/container_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_top"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pill_width_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/cont_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pill_width_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/cont_desc_size" />

        <SeekBar
            android:id="@+id/pill_width_seekbar"
            style="@style/customSeekBar"
            android:max="300"
            android:min="40"
            android:progress="108" />

    </LinearLayout>

    <View style="@style/dividerTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_mid"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pill_thickness_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/cont_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pill_thickness_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/cont_desc_size" />

        <SeekBar
            android:id="@+id/pill_thickness_seekbar"
            style="@style/customSeekBar"
            android:max="4"
            android:min="1"
            android:progress="2" />

    </LinearLayout>

    <View style="@style/dividerTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_mid"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pill_bottom_space_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/cont_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottom_space_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/cont_desc_size" />

        <SeekBar
            android:id="@+id/bottom_space_seekbar"
            style="@style/customSeekBar"
            android:max="14"
            android:min="2"
            android:progress="8" />

    </LinearLayout>

    <View style="@style/dividerTransparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_bottom"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <Button
            android:id="@+id/pill_shape_apply"
            style="@style/buttonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_apply" />

        <Button
            android:id="@+id/pill_shape_reset"
            style="@style/buttonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/container_padding"
            android:background="@drawable/button_red"
            android:text="@string/btn_reset"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>