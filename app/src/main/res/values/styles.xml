<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorPicker" parent="Theme.Material3.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/LightPickerDialogTitleStyle</item>
        <item name="android:dialogCornerRadius">@dimen/cont_corner_radius</item>
        <item name="android:buttonCornerRadius">@dimen/cont_corner_radius</item>
        <item name="android:background">@drawable/container</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:radius">@dimen/cont_corner_radius</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="cpv_hashColor">@color/textColorPrimary</item>
    </style>

    <style name="LightPickerDialogTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Material.DialogWindowTitle
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SeekBar.Iconify" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:layout_marginTop">@dimen/container_padding</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:thumb">@color/transparent</item>
        <item name="android:splitTrack">false</item>
        <item name="android:focusable">true</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="MenuLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:background">@color/colorContainer</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.Material.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Material.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="dividerAccent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/divider_accent</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">@dimen/container_paddingSide</item>
    </style>

    <style name="dividerTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="customSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:switchMinWidth">44dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>

    <style name="customRadioButtonColored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">@dimen/container_paddingSide</item>
        <item name="android:paddingEnd">@dimen/container_paddingSide</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radio_sb_button_bg</item>
        <item name="android:textColor">@drawable/radio_sb_text_color</item>
        <item name="android:textSize">@dimen/cont_desc_size</item>
    </style>

    <style name="customRadioButtonColored.Tab" parent="customRadioButtonColored">
        <item name="android:background">@drawable/radio_sb_tab_bg</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.009375</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="buttonLandingPage">
        <item name="fontFamily">@font/regular</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="buttonMain" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="MaterialComponents.MaterialAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="android:background">@drawable/container</item>
        <item name="android:dialogCornerRadius">@dimen/cont_corner_radius</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button.Text
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Button.Text
        </item>
    </style>

    <style name="MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MaterialAlertDialog.Button.Text" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Toolbar.TitleText.Collapsed" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="actionButtonOverflow" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:src">@drawable/ic_menu</item>
        <item name="tint">@color/textColorPrimary</item>
    </style>

    <style name="BottomNavigationView" parent="Base.Widget.Material3.BottomNavigationView">
        <item name="android:theme">@style/Theme.Iconify</item>
        <item name="android:background">@drawable/bottom_navbar_bg</item>
        <item name="itemRippleColor">@color/rippleAccent</item>
        <item name="itemIconTint">@color/textColorPrimary</item>
        <item name="itemActiveIndicatorStyle">
            @style/BottomNavigationView.ActiveIndicator
        </item>
        <item name="android:height">84dp</item>
        <item name="android:minHeight">84dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="android:textSize">@dimen/cont_desc_size</item>
        <item name="itemPaddingTop">12dp</item>
        <item name="itemPaddingBottom">18dp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearanceLabelMedium</item>
        <item name="itemTextAppearanceActive">@style/TextAppearanceLabelMedium</item>
    </style>

    <style name="BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/navbarSelectedBackground</item>
        <item name="marginHorizontal">6dp</item>
        <item name="android:width">72dp</item>
        <item name="android:height">36dp</item>
    </style>

    <style name="BottomNavigationView.ItemTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomNavigationView.ItemTextAppearance.Selected" parent="BottomNavigationView.ItemTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearanceLabelMedium" parent="@style/TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/cont_desc_size</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:buttonTint">@color/color_radio_button_circle</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@null</item>
    </style>
</resources>