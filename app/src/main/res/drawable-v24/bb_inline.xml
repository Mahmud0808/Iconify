<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <corners android:radius="24.0dp" />
            <size android:height="48.0dp" />
            <solid android:color="@color/colorContainer" />
            <stroke
                android:width="1.0dp"
                android:color="@color/transparent" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <corners android:radius="24.0dp" />
            <size android:height="48.0dp" />
            <solid android:color="@color/colorContainerOverlay" />
            <stroke
                android:width="1.0dp"
                android:color="@color/holo_blue_light" />
        </shape>
    </item>
    <item
        android:end="80.0dp"
        android:gravity="fill_horizontal|center"
        android:start="4.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="20.0dp" />
            <size android:height="40.0dp" />
            <gradient
                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
        </shape>
    </item>
</layer-list>
