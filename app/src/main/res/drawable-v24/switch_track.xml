<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/switch_thumb_inactive" />
                    <corners android:radius="@dimen/_18sdp" />
                </shape>
            </item>
            <item android:bottom="@dimen/_1sdp" android:end="@dimen/_1sdp" android:start="@dimen/_1sdp" android:top="@dimen/_1sdp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/switch_track_inactive" />
                    <corners android:radius="@dimen/_17sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:endColor="@color/holo_green_light" android:startColor="@color/holo_blue_light" />
                    <corners android:radius="@dimen/_18sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>