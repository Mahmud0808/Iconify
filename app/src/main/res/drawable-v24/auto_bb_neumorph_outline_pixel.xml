                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners android:radius="24.0dp" />
            <size
                android:width="48.0dp"
                android:height="48.0dp" />
        </shape>
    </item>
    <item
        android:end="2.0dp"
        android:gravity="fill_horizontal|center"
        android:start="2.0dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#FF0F0F0F"
                android:startColor="#FF363636"
                android:type="linear" />
            <corners android:radius="22.0dp" />
            <size android:height="44.0dp" />
        </shape>
    </item>
    <item
        android:end="4.0dp"
        android:gravity="fill_horizontal|center"
        android:start="4.0dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#FF0F0F0F"
                android:startColor="#FF363636"
                android:type="linear" />
            <corners android:radius="20.0dp" />
            <size android:height="40.0dp" />
        </shape>
    </item>
</layer-list>
