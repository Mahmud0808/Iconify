<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius"
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</ripple>