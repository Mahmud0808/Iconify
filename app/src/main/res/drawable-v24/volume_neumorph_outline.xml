<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center">
        <shape>
            <gradient
                android:angle="270.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners android:radius="24.0dp" />
        </shape>
    </item>
    <item
        android:bottom="2.0dp"
        android:end="2.0dp"
        android:gravity="fill_horizontal|center"
        android:start="2.0dp"
        android:top="2.0dp">
        <shape>
            <gradient
                android:angle="0.0"
                android:endColor="@color/neumorph_outline_end"
                android:startColor="@color/neumorph_outline_start"
                android:type="linear" />
            <corners android:radius="22.0dp" />
        </shape>
    </item>
    <item
        android:bottom="4.0dp"
        android:end="4.0dp"
        android:gravity="fill_horizontal|center"
        android:start="4.0dp"
        android:top="4.0dp">
        <shape>
            <gradient
                android:angle="180.0"
                android:endColor="@color/neumorph_outline_end"
                android:startColor="@color/neumorph_outline_start"
                android:type="linear" />
            <corners android:radius="20.0dp" />
        </shape>
    </item>
    <item
        android:width="42dp"
        android:height="42dp">
        <layer-list>
            <item
                android:bottom="6dp"
                android:gravity="center|top"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp">
                <shape android:shape="rectangle">
                    <corners android:radius="18.0dp" />
                    <gradient
                        android:angle="270.0"
                        android:endColor="@color/holo_green_light"
                        android:startColor="@color/holo_blue_light" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
