<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24.0dp" />
            <gradient
                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20.0dp" />
            <gradient
                android:angle="180.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
        </shape>
    </item>
</layer-list>
