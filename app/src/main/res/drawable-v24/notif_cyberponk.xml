<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item
        android:end="120dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:start="120dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:gravity="start|top"
        android:start="48dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners android:radius="20dp" />
            <size
                android:width="70dp"
                android:height="3dp" />
        </shape>
    </item>
    <item
        android:end="48dp"
        android:gravity="end|bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners android:radius="20dp" />
            <size
                android:width="70dp"
                android:height="3dp" />
        </shape>
    </item>
</ripple>
