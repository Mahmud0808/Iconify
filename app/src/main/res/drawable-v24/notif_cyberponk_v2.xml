<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315.0"
                android:endColor="@color/holo_green_light"
                android:startColor="@color/holo_blue_light" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:end="120dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:start="120dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</ripple>
