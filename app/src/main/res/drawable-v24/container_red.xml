<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/pink"
                android:startColor="@color/red" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor4" />
            <corners android:radius="@dimen/cont_corner_radius2" />
        </shape>
    </item>
</ripple>