<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_green_light" />
            <corners
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius"
                android:topLeftRadius="@dimen/cont_corner_radius"
                android:topRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_blue_light" />
            <corners
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius"
                android:topLeftRadius="@dimen/cont_corner_radius"
                android:topRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</ripple>