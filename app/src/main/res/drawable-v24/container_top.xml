<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleAccent">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorContainer" />
                    <corners
                        android:bottomLeftRadius="@dimen/_5sdp"
                        android:bottomRightRadius="@dimen/_5sdp"
                        android:topLeftRadius="@dimen/cont_corner_radius"
                        android:topRightRadius="@dimen/cont_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorContainerOverlay" />
                    <corners
                        android:bottomLeftRadius="@dimen/_5sdp"
                        android:bottomRightRadius="@dimen/_5sdp"
                        android:topLeftRadius="@dimen/cont_corner_radius"
                        android:topRightRadius="@dimen/cont_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>