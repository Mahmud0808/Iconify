    <item>
        <shape
            android:shape="rectangle"
            android:tint="@color/holo_blue_light_light">
            <gradient
                android:angle="0.0"
                android:endColor="#00000000"
                android:startColor="#66FFFFFF" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:tint="@color/holo_green_light_light">
            <gradient
                android:angle="0.0"
                android:endColor="#66FFFFFF"
                android:startColor="#00000000" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</layer-list>