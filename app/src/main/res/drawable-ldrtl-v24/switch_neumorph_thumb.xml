<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="-0.5dp" android:top="4dp">
                <shape android:shape="oval">
                    <gradient android:angle="0.0" android:endColor="@color/holo_green_light" android:startColor="@color/holo_blue_light" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="6dp" android:right="2dp" android:top="6dp">
                <shape android:shape="oval">
                    <gradient android:angle="270.0" android:endColor="@color/neumorph_outline_end" android:startColor="@color/neumorph_outline_start" />
                    <size android:width="18dp" android:height="18dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="8dp" android:right="4dp" android:top="8dp">
                <shape android:shape="oval">
                    <gradient android:angle="90.0" android:endColor="@color/neumorph_outline_end" android:startColor="@color/neumorph_outline_start" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="4dp" android:left="-0.5dp" android:right="4dp" android:top="4dp">
                <shape android:shape="oval" android:tint="@color/textColorPrimary">
                    <solid android:color="#66FFFFFF" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="2dp" android:right="6dp" android:top="6dp">
                <shape android:shape="oval">
                    <gradient android:angle="270.0" android:endColor="@color/neumorph_outline_end" android:startColor="@color/neumorph_outline_start" />
                    <size android:width="18dp" android:height="18dp" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="4dp" android:right="8dp" android:top="8dp">
                <shape android:shape="oval">
                    <gradient android:angle="90.0" android:endColor="@color/neumorph_outline_end" android:startColor="@color/neumorph_outline_start" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
