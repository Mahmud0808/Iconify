<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorPicker" parent="Theme.Material3.Dark.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/DarkPickerDialogTitleStyle</item>
        <item name="android:dialogCornerRadius">@dimen/cont_corner_radius</item>
        <item name="android:buttonCornerRadius">@dimen/cont_corner_radius</item>
        <item name="android:background">@drawable/container_main</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:radius">@dimen/cont_corner_radius</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorTertiary">@color/colorAccent</item>
    </style>

    <style name="DarkPickerDialogTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Material.DialogWindowTitle
        </item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="MenuDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:background">@color/colorContainer</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
</resources>