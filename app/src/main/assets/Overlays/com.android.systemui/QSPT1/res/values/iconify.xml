<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SystemUI.QuickSettings" parent="@*android:style/Theme.DeviceDefault">
        <item name="@*android:textColorOnAccent">#FFFFFFFF</item>
        <item name="android:textColorPrimaryInverse">#FFFFFFFF</item>
        <item name="android:textColorSecondaryInverse">#BFFFFFFF</item>

        <item name="android:colorAccent">#FFFFFFFF</item>
        <item name="@*android:colorAccentPrimary">#FFFFFFFF</item>

        <item name="isQsTheme">true</item>
        <item name="lightIconTheme">@style/QSIconTheme</item>
        <item name="darkIconTheme">@style/QSIconTheme</item>
        <item name="android:colorError">@*android:color/error_color_device_default_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <item name="surfaceBright">@*android:color/system_surface_bright_dark</item>
        <item name="android:colorBackground">@*android:color/system_surface_bright_dark</item>
        <item name="scHigh">@*android:color/system_surface_container_high_dark</item>
        <item name="primary">@*android:color/system_primary_dark</item>
        <item name="tertiary">@*android:color/system_tertiary_dark</item>
        <item name="onSurface">@*android:color/system_on_surface_dark</item>
        <item name="onSurfaceVariant">@*android:color/system_on_surface_variant_dark</item>
        <item name="outline">@*android:color/system_outline_dark</item>

        <item name="shadeActive">#FFFFFFFF</item>
        <item name="onShadeActive">@*android:color/system_accent1_900</item>
        <item name="onShadeActiveVariant">@*android:color/system_accent1_700</item>
        <item name="shadeInactive">@*android:color/system_neutral2_800</item>
        <item name="onShadeInactive">@*android:color/system_neutral1_100</item>
        <item name="onShadeInactiveVariant">@*android:color/system_neutral2_200</item>
        <item name="shadeDisabled">@color/shade_disabled</item>
        <item name="underSurface">@*android:color/system_neutral1_1000</item>
        <item name="android:itemTextAppearance">@style/Control.MenuItem</item>
    </style>

    <style name="Control" />

    <style name="Control.MenuItem" parent="@style/Control">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
        <item name="android:textSize">@dimen/control_menu_item_text_size</item>
        <item name="android:textColor">@color/control_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/control_menu_item_height</item>
    </style>

    <style name="QSIconTheme">
        <item name="backgroundColor">?android:textColorHint</item>
        <item name="fillColor">?android:textColorPrimary</item>
        <item name="singleToneColor">?android:textColorPrimary</item>
    </style>

    <style name="DualToneLightTheme">
        <item name="iconBackgroundColor">@color/light_mode_icon_color_dual_tone_background</item>
        <item name="fillColor">@color/light_mode_icon_color_dual_tone_fill</item>
        <item name="singleToneColor">@color/light_mode_icon_color_single_tone</item>
        <item name="homeHandleColor">@color/navigation_bar_home_handle_light_color</item>
    </style>

    <style name="QSHeaderDarkTheme">
        <item name="iconBackgroundColor">@color/dark_mode_qs_icon_color_dual_tone_background</item>
        <item name="fillColor">@color/dark_mode_qs_icon_color_dual_tone_fill</item>
        <item name="singleToneColor">@color/dark_mode_qs_icon_color_single_tone</item>
    </style>

    <style name="Theme.SystemUI.QuickSettings.Header" parent="@style/Theme.SystemUI.QuickSettings">
        <item name="darkIconTheme">@style/QSHeaderDarkTheme</item>
        <item name="lightIconTheme">@style/DualToneLightTheme</item>
    </style>

    <dimen name="control_menu_item_text_size">16sp</dimen>
    <dimen name="control_menu_item_height">54dp</dimen>
    <color name="light_mode_icon_color_dual_tone_background">#4DFFFFFF</color>
    <color name="light_mode_icon_color_dual_tone_fill">#FFFFFFFF</color>
    <color name="light_mode_icon_color_single_tone">#FFFFFFFF</color>
    <color name="navigation_bar_home_handle_light_color">#EBFFFFFF</color>
    <color name="dark_mode_qs_icon_color_dual_tone_background">#3D000000</color>
    <color name="dark_mode_qs_icon_color_dual_tone_fill">#99000000</color>
    <color name="dark_mode_qs_icon_color_single_tone">#B3000000</color>
    <color name="control_primary_text">#E6FFFFFF</color>
</resources>
