<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@*android:id/background"
        android:gravity="fill_horizontal|center">
        <layer-list>
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                    <size android:height="48.0dip" />
                    <solid android:color="@*android:color/system_neutral2_800" />
                </shape>
            </item>
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                    <size android:height="48.0dip" />
                    <gradient
                        android:angle="90.0"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:startColor="#40000000" />
                </shape>
            </item>
            <item
                android:end="4.5dip"
                android:gravity="fill_horizontal|center"
                android:start="4.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_left" />
                    <size android:height="40.0dip" />
                    <solid android:color="@*android:color/system_neutral2_800" />
                </shape>
            </item>
            <item
                android:end="4.5dip"
                android:gravity="fill_horizontal|center"
                android:start="4.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_left" />
                    <size android:height="40.0dip" />
                    <gradient
                        android:angle="270.0"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:startColor="#40000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:id="@*android:id/progress"
        android:gravity="fill_horizontal|center">
        <com.android.systemui.util.RoundedCornerProgressDrawable android:drawable="@drawable/brightness_progress_full_drawable" />
    </item>
</layer-list>