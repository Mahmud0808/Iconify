<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MediaPlayer" parent="@*android:style/Theme.DeviceDefault.DayNight">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:backgroundTint">@*android:color/system_neutral2_10</item>
    </style>
    <style name="MediaPlayer.ProgressBar" parent="@*android:style/Widget.ProgressBar.Horizontal">
        <item name="android:clickable">true</item>
        <item name="android:thumb">@*android:drawable/seekbar_thumb_material_anim</item>
        <item name="android:splitTrack">false</item>
        <item name="android:progressTint">?android:textColorPrimary</item>
        <item name="android:progressBackgroundTint">?android:textColorSecondary</item>
        <item name="android:thumbTint">?android:textColorPrimary</item>
    </style>
    <style name="MediaPlayer.SolidButton" parent="@*android:style/Theme.DeviceDefault.DayNight">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:tint">?android:colorPrimary</item>
        <item name="android:backgroundTint">@*android:color/accent_device_default</item>
    </style>
    <style name="MediaPlayer.AppIcon" parent="@*android:style/Theme.DeviceDefault.DayNight">
        <item name="android:background">@drawable/qs_media_icon_background</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:backgroundTint">@*android:color/accent_device_default</item>
    </style>
    <style name="MediaPlayer.Album" parent="@*android:style/Theme.DeviceDefault.DayNight">
        <item name="android:backgroundTint">@*android:color/accent_device_default</item>
    </style>
    <style name="MediaPlayer.OutlineButton" parent="@*android:style/Theme.DeviceDefault.DayNight">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/qs_media_button_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@*android:string/config_notificationHandlerPackage</item>
        <item name="android:backgroundTint">@*android:color/accent_device_default</item>
    </style>
</resources>
