<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:color/system_neutral2_800" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item
                android:bottom="6dp"
                android:drawable="@drawable/ic_qstile_reflect_disabled_iconify"
                android:end="12dp"
                android:gravity="end|bottom" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="270.0"
                        android:endColor="?android:colorSecondary"
                        android:startColor="?android:colorPrimary" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item
                android:bottom="6dp"
                android:drawable="@drawable/ic_qstile_reflect_iconify"
                android:end="12dp"
                android:gravity="end|bottom" />
        </layer-list>
    </item>
</layer-list>
