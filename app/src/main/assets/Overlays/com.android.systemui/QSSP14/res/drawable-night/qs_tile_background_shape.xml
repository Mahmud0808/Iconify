<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:color/holo_blue_dark" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#1AFFFFFF" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:color/holo_blue_dark" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="?android:colorSecondary"
                        android:startColor="?android:colorPrimary" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:tintMode="multiply">
                    <solid android:color="#40000000" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
