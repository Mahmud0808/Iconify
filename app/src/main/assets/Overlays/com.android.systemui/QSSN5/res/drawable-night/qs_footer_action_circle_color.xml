<?xml version="1.0" encoding="utf-8" ?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="4dp">
    <ripple android:color="?android:colorControlHighlight">
        <item android:id="@*android:id/mask">
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <corners
                    android:bottomLeftRadius="14.0dp"
                    android:bottomRightRadius="@*android:dimen/harmful_app_name_padding_top"
                    android:topLeftRadius="@*android:dimen/harmful_app_name_padding_top"
                    android:topRightRadius="14.0dp" />
            </shape>
        </item>
        <item>
            <shape>
                <corners
                    android:bottomLeftRadius="14.0dp"
                    android:bottomRightRadius="@*android:dimen/harmful_app_name_padding_top"
                    android:topLeftRadius="@*android:dimen/harmful_app_name_padding_top"
                    android:topRightRadius="14.0dp" />
                <gradient
                    android:angle="0.0"
                    android:endColor="@*android:color/holo_green_light"
                    android:startColor="@*android:color/holo_blue_light" />
            </shape>
        </item>
        <item
            android:bottom="4.0dp"
            android:end="4.0dp"
            android:start="4.0dp"
            android:top="4.0dp">
            <shape>
                <corners
                    android:bottomLeftRadius="10.0dp"
                    android:bottomRightRadius="@*android:dimen/harmful_app_name_padding_left"
                    android:topLeftRadius="@*android:dimen/harmful_app_name_padding_left"
                    android:topRightRadius="10.0dp" />
                <solid android:color="?android:colorBackgroundFloating" />
            </shape>
        </item>
    </ripple>
</inset>
