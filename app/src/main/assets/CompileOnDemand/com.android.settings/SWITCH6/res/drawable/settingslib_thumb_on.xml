<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="4dp"
        android:top="4dp">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:angle="0.0"
                        android:endColor="@*android:color/holo_green_light"
                        android:startColor="@*android:color/holo_blue_light" />
                    <size
                        android:width="18dp"
                        android:height="18dp" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="270.0"
                        android:endColor="#FFF0F0F0"
                        android:startColor="#FFBDBDBD" />
                    <size
                        android:width="16dp"
                        android:height="16dp" />
                </shape>
            </item>
            <item
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="90.0"
                        android:endColor="#FFF0F0F0"
                        android:startColor="#FFBDBDBD" />
                    <size
                        android:width="14dp"
                        android:height="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
