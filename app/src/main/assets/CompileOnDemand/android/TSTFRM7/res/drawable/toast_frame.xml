<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315.0"
                android:endColor="@*android:color/holo_green_light"
                android:startColor="@*android:color/holo_blue_light" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="6.0dip"
                android:left="12.0dip"
                android:right="12.0dip"
                android:top="6.0dip" />
            <gradient
                android:endColor="#B3FFFFFF"
                android:startColor="#99FFFFFF" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_right" />
        </shape>
    </item>
</layer-list>
